{
  "template": "metaalert_index*",
  "settings": {
    "number_of_replicas": {{index_number_of_replicas}},
    "number_of_shards": {{index_number_of_shards}}
  },
  "mappings": {
    "metaalert_doc": {
      "dynamic_templates": [
        {
          "alert_template": {
          "path_match": "alert.*",
          "match_mapping_type": "string",
          "mapping": {
            "type": "keyword"
          }
        }
        },
        {
          "threat_triage_score": {
           "mapping": {
              "type": "float"
            },
            "match": "threat:triage:*score",
            "match_mapping_type": "*"
          }
        }
      ],
      "properties": {
        "guid": {
          "type": "keyword"
        },
        "score": {
          "type": "keyword"
        },
        "status": {
          "type": "keyword"
        },
        "timestamp": {
          "type": "date",
          "format": "epoch_millis"
        },
        "metron_alert": {
          "type": "nested"
        },
        "source:type": {
          "type": "keyword"
        }
      }
    }
  }
}
